---
import HeaderLink from './HeaderLink.astro'
import avatar from '../assets/avatar.webp'

const links = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
]
---

<header
  class="sticky top-0 z-50 border-b border-slate-700 bg-slate-900/50 backdrop-blur-sm"
>
  <nav class="wrapper flex items-center justify-between py-3">
    <a href="/" aria-label="Go to home">
      <img
        src={avatar.src}
        alt="Gaurav Shukla"
        width="40"
        height="40"
        class="size-10 rounded-full"
      />
    </a>

    <ul class="flex items-center gap-4 md:gap-6">
      {
        links.map((link) => (
          <li>
            <HeaderLink
              href={link.href}
              class="text-sm transition-colors hover:text-teal-300"
            >
              {link.label}
            </HeaderLink>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
